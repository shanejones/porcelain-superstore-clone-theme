
  
<section class="customer-activate-template">
  <div class="container">
    <h1 class="heading-1">{{ 'customer.activate_account.title' | t }}</h1>
    <p>{{ 'customer.activate_account.subtext' | t }}</p>
    {% form 'activate_customer_password' %}
      {{ form.errors | default_errors }}

      <p>
        <label for="CustomerPassword" class="label">
          {{ 'customer.activate_account.password' | t }}
        </label>
        <input type="password"
          class="text-input"
          name="customer[password]"
          id="CustomerPassword"
          placeholder="{{ 'customer.activate_account.password' | t }}">
      </p>

      <p>
        <label for="CustomerPasswordConfirmation" class="label">
          {{ 'customer.activate_account.password_confirm' | t }}
        </label>
        <input type="password"
          name="customer[password_confirmation]"
          class="text-input"
          id="CustomerPasswordConfirmation"
          placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
      </p>

      <input type="submit" class="btn btn-primary" value="{{ 'customer.activate_account.submit' | t }}">
      <input type="submit" class="btn btn-secondary" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
    {% endform %}
  </div>
</section>
