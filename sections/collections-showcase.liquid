{% render 'collections-showcase', blocks: section.blocks, settings: section.settings %}

{% schema %}
  {
    "name": "Collections Showcase",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "shop by category"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type":      "color",
        "id":        "background_color",
        "label":     "Background Colour",
        "default":   "#fff"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Category Grid",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Title colour"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Recommended Size: 1/3 image = 820x820, 2/3 image 896x1992"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile / Tablet Image",
            "info": "Recommended Size: 1536x1536"
          },
          {
            "type": "radio",
            "id": "dt_width",
            "label": "Width on Desktop",
            "options": [
              { "value": "one_third", "label": "1/3" },
              { "value": "two_thirds", "label": "2/3" }
            ],
            "default": "one_third",
            "info": "Change block width on Desktop"
          },
          {
            "type": "checkbox",
            "id": "show_on_mobile",
            "label": "Show on mobile",
            "default": true
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collections Showcase",
        "category": "Baseline"
      }
    ]
  }
{% endschema %}
  